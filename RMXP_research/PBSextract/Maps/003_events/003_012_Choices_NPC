[EVENT]
xy=[9, 7]
graphic="NPC 08"
direction=E

[PAGE]



Show Text "\\rThe \"Choices\" event command cannot allow more than 4 choices. This is what you should do instead."
# Store result in Variable 1.
# Cancelling stores a result of -1.
Show Text "Please choose one.\\ch[1,-1, Choice 1,Choice 2,Choice 3, Choice 4,Choice 5,Choice 6]"
if :TempPokemonChoice == -1
  Show Text "The choice was cancelled."
if :TempPokemonChoice == 0
  Show Text "Choice 1 was chosen."
if :TempPokemonChoice == 1
  Show Text "Choice 2 was chosen."
if :TempPokemonChoice == 2
  Show Text "Choice 3 was chosen."
if :TempPokemonChoice == 3
  Show Text "Choice 4 was chosen."
if :TempPokemonChoice == 4
  Show Text "Choice 5 was chosen."
if :TempPokemonChoice == 5
  Show Text "Choice 6 was chosen."
# Store result in Variable 1.
# A "cancel" number of 0 means cancelling is not
# allowed.
Show Text "Please choose one. This choice can't be canceled.\\ch[1,0,Choice 1,Choice 2]"
if :TempPokemonChoice == 0
  Show Text "Choice 1 was chosen."
if :TempPokemonChoice == 1
  Show Text "Choice 2 was chosen."
Show Text "Multiple choice commands like these are enabled using the \\\\ch message command."
Show Text "The bracketed area after \\\\ch consists of the Variable to store the choice, a default choice in case the player cancels, and then a number of choices."
Show Text "If the default choice is set to 0, the player can't cancel."
[end]

