[EVENT]
xy=[10, 7]
graphic="NPC 07"
direction=W

[PAGE]



Label Start
Show Text "Choose a text option."
Show Choices choices=['Colour and formatting', 'Showing extra things', 'Other', 'Cancel'], default=4
When 'Colour and formatting'
  Show Text "\\bThis is the text of a male character. \\rThis is the text of a female character."
  Show Text "\\pgThis text is the colour of the player's gender. \\pogThis text is the colour of the opposite gender to the player."
  Show Text "\\c[0]Default text, \\c[1]blue text, \\c[2]red text, \\c[3] green text, \\c[4]cyan text, \\c[5]magenta text, \\c[6] yellow text, \\c[7]grey text, \\c[8]white text."
  Show Text "<b>Bold text,</b> <i>italic text,</i> <u>underlined text,</u> <s>strikethrough text,</s> <outln>outline text,</outln> <outln2>thicker outline text.</outln2>"
  Show Text "<fn=Arial>Arial text,</fn> <fs=25>size 25 text,</fs> <fs=40>size 40 text,</fs> <o=128>half-transparent text.</o>"
  Show Text "This is a line\\n break. Text is \\n<r>right-aligned until next line\\n break. Text is <ac>centred</ac> here. Text is <ar>right-aligned</ar> here."
  Goto Start
When 'Showing extra things'
  Show Text "\\PN is the player's name, \\PM is the player's money, \\v[12] is the content of Variable 12."
  Show Text "\\GThe money window is shown."
  Show Text "\\CNThe coins window is shown."
  Show Text "\\G\\CNThe money and coins windows are both shown. The coins window must be shown second."
  Show Text "\\f[introBoy]The introBoy picture from the Graphics/Pictures folder is shown."
  Show Text "\\ff[introBoy]The introBoy picture is shown again, but cropped to the top-left 96x96 pixels of it."
  Show Text "This is <icon=bagPocket3> bagPocket3 from the folder Graphics/Icons. Icons shown this way are not padded."
  Goto Start
When 'Other'
  Show Text "\\w[signskin]The windowskin has changed to \signskin\ here."
  Show Text "\\l[3]This message box has 3 lines to it rather than 2, so more text can be shown at once. Lorem ipsum dolor sit amet, consectetur adipisicing elit."
  Show Text "\\wuThis message box is at the top."
  Show Text "\\wmThis message box is in the middle."
  Show Text "\\wuThis message box is\\wm jumping around the screen\\wd in a rather off-putting way."
  Show Text "\\opThis message box slides on-screen at the start."
  Show Text "\\clThis message box slides off-screen at the end."
  Show Text "\\ts[]This text appeared instantly!"
  Show Text "\\ts[5]This text is slow."
  Show Text "\\se[Pkmn move learnt]Sound effect \"Pkmn move learnt\ was played."
  Show Text "Music effect \"Item get\" will be played. \\me[Item get]"
  Goto Start
When 'Cancel'
Show Text "A complete list of all message options is available on the wiki."
[end]

