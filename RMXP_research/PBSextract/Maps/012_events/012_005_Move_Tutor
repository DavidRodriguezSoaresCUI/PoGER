[EVENT]
xy=[2, 7]
graphic="NPC 11"

[PAGE]



Show Text "\\rHello! I'm a Move Tutor!"
Show Text "\\rI can teach a special and powerful move to your Pokémon."
Label Start
Show Text "\\rWhich special move would you like me to teach?"
Show Choices choices=['Frenzy Plant', 'Blast Burn', 'Hydro Cannon', 'Exit'], default=4
When 'Frenzy Plant'
  if s:pbMoveTutorChoose(:FRENZYPLANT)
    Show Text "\\rWould you like me to teach another Pokémon a special move?"
    Show Choices choices=['Yes', 'No'], default=2
    When 'Yes'
      Goto Start
    When 'No'
  Else
    Goto Start
  
When 'Blast Burn'
  if s:pbMoveTutorChoose(:BLASTBURN)
    Show Text "\\rWould you like me to teach another Pokémon a special move?"
    Show Choices choices=['Yes', 'No'], default=2
    When 'Yes'
      Goto Start
    When 'No'
  Else
    Goto Start
  
When 'Hydro Cannon'
  if s:pbMoveTutorChoose(:HYDROCANNON)
    Show Text "\\rWould you like me to teach another Pokémon a special move?"
    Show Choices choices=['Yes', 'No'], default=2
    When 'Yes'
      Goto Start
    When 'No'
  Else
    Goto Start
  
When 'Exit'
Show Text "\\rCome back any time!"
[end]

