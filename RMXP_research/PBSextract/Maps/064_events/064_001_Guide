[EVENT]
xy=[2, 9]
trigger=onAutorun
graphic=trchar028
direction=N

[PAGE]



Set Move Route :self
  Set property=opacity value={opa}
  Set property=through value=:ON
  Step N
  Set property=opacity value={opa}
  Step N
  Step N
  Step N
  Turn E
  Set property=through value=:OFF
Set Move Route :player
  Set property=through value=:ON
  Set property=opacity value={opa}
  Step N
  Step N
  Step N
  Step N
  Step E
  Step N
  Step E
  Step E
  Set property=through value=:OFF
s:pbSet(1,pbBattleChallenge.battleNumber)
if :TempPokemonChoice == 1
  Set Move Route :player
    Turn E
Else
  Set Move Route 2
    Set property=through value=:ON
    Step E
    Step E
    Step E
    Step N
    Step N
    Step N
    Step N
    Set property=graphic value=",2,0"
    Set property=through value=:OFF
  
  Set Move Route :player
    Set property=through value=:ON
    Step W
    Step W
    Set property=through value=:OFF
  
  Goto Choice Menu
Label Next Opponent
Move Event event=2, absolute_coordinates=[12,1], direction=S
s:pbBattleChallengeGraphic(get_character(2))
Set Move Route 2
  Set property=through value=:ON
  Step S
  Turn S
  Step S
  Step S
  Step W
  Step W
  Step W
  Set property=through value=:OFF
s:pbSet(1,pbBattleChallengeBeginSpeech)
Show Text "\\v[1]"
if s:pbBattleChallengeBattle
  s:pbBattleChallenge.pbAddWin
  if s:pbBattleChallenge.pbMatchOver?
    s:pbBattleChallenge.setDecision(1)
    Wait ms=400
    Play SE="Door exit", volume=80, pitch=100
    Fadeout color=Black, ms=300
    Wait ms=400
    s:pbBattleChallenge.pbGoToStart
    Fadein ms=300
    End Execution
  Else
    Play SE="Door exit", volume=80, pitch=100
    Fadeout color=Black, ms=300
    Wait ms=400
    Transfer Player map=65, x=4, y=5, direction="N", fading="NoFading"
    Fadein ms=300
    End Execution
  
Else
  s:pbBattleChallenge.setDecision(2)
  Play SE="Door exit", volume=80, pitch=100
  Fadeout color=Black, ms=300
  Wait ms=400
  s:pbBattleChallenge.pbGoToStart
  Fadein ms=300
  End Execution
[end]

