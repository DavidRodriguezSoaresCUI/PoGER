[EVENT]
xy=[6, 6]
graphic=trchar071

[PAGE]



s:pbTrainerIntro(:CHAMPION)
Show Text "\\bEverything in here uses a temporary switch to decide what to do, rather than a Self Switch, because it all needs to reset each time you enter."
if s:pbTrainerBattle(:CHAMPION,"Blue",_I("A good battle indeed!"),false,0)
  s:setTempSwitchOn("A")
  # Open door.
  s:get_character(1).setTempSwitchOn("A")
s:pbTrainerEnd
[end]


[PAGE]

s:isSSon("A") == :ON

Show Text "\\bYou beat me! Go on to the Hall of Fame."
[end]

