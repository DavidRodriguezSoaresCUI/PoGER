[EVENT]
xy=[7, 7]
graphic=trchar017

[PAGE]



Show Text "\\bOh, hi!"
Show Text "\\bWould you like this Pok√©mon Egg?"
Show Choices choices=['Yes', 'No'], default=2
When 'Yes'
  # pbGenerateEgg can only add an egg to the player's
  # party, so a space is required.
  if s:pbGenerateEgg(:TOGEPI,_I("Fan Club President"))
    Show Text "\\bTake good care of it!"
    :A = :ON
  Else
    Show Text "\\bOh, you can't carry it with you."
    Show Text "\\bMake some space in your party and come back."
  
When 'No'
  Show Text "\\bOh. Will I ever find someone to take this Egg?"
[end]


[PAGE]

:A == :ON

Show Text "\\bI wonder what that Egg will hatch into?"
[end]

