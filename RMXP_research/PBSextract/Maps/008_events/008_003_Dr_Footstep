[EVENT]
xy=[1, 4]
graphic="NPC 07"

[PAGE]



Show Text "\\bDr. Footstep: Hi!  I rate the footprints of Pokémon!"
Show Text "\\bDr. Footstep: Can I rate your Pokémon for you?"
Show Choices choices=['Yes', 'No'], default=2
When 'Yes'
  Show Text "\\bDr. Footstep: Which Pokémon do you want me to rate?"
  s:pbChooseNonEggPokemon(1,2)
  if :TempPokemonChoice < 0
    Show Text "\\bDr. Footstep: Maybe next time, then."
    End Execution
  
  s:poke=pbGetPokemon(1) h=poke.happiness stage=0 stage=1 if h>=1 stage=2 if h>=50 stage=3 if h>=100 stage=4 if h>=150 stage=5 if h>=200 stage=6 if h>=255 pbSet(3,stage)"
  if :TempPokemonName == 0
    Show Text "\\bDr. Footstep: By any chance, you... Are you a very strict person? I feel that your \\v[2] really doesn't like you..."
  
  if :TempPokemonName == 1
    Show Text "\\bDr. Footstep: Hmmm... Your \\v[2] may not like you very much."
  
  if :TempPokemonName == 2
    Show Text "\\bDr. Footstep: The relationship is neither good nor bad... Your \\v[2] looks neutral."
  
  if :TempPokemonName == 3
    Show Text "\\bDr. Footstep: Your \\v[2] is a little friendly to you... That's what I'm getting."
  
  if :TempPokemonName == 4
    Show Text "\\bDr. Footstep: Your \\v[2] is friendly to you. It must be happy with you."
  
  if :TempPokemonName == 5
    Show Text "\\bDr. Footstep: Your \\v[2] is quite friendly to you! You must be a kind person!"
  
  if :TempPokemonName == 6
    Show Text "\\bDr. Footstep: Your \\v[2] is super friendly to you! I'm a bit jealous!"
    s:p=pbGetPokemon(1) n=(p.hasRibbon?(:FOOTPRINT)) ? 1 : 0 pbSet(4,n)"
    if :TempMoveName == 0
      Show Text "\\bDr. Footstep: I shall reward your \\v[2] with a ribbon!"
      s:poke=pbGetPokemon(1) poke.giveRibbon(:FOOTPRINT)"
      Show Text "\\PN received the Footprint Ribbon. \\me[Item get]\\wtnp[20]"
      Show Text "\\PN put the Footprint Ribbon on \\v[2]."
    
  
When 'No'
  Show Text "\\bDr. Footstep: Maybe next time, then."
[end]

