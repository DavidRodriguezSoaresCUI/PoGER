[EVENT]
xy=[3, 10]
graphic=trchar028
direction=E

[PAGE]



Label Start
Show Text "\\bI can control your Pok√©dex access. What do you want me to do?"
Show Choices choices=['Kanto Dex access', 'Johto Dex access', 'National Dex access', 'Exit'], default=4
When 'Kanto Dex access'
  Show Text "\\bWhat about it?"
  Show Choices choices=['Unlock Kanto Dex', 'Lock Kanto Dex', 'Exit'], default=3
  When 'Unlock Kanto Dex'
    s:pbUnlockDex(0)
    Show Text "\\bThe Kanto Dex was unlocked."
  When 'Lock Kanto Dex'
    s:pbLockDex(0)
    Show Text "\\bThe Kanto Dex was locked."
  When 'Exit'
    Goto Start
When 'Johto Dex access'
  Show Text "\\bWhat about it?"
  Show Choices choices=['Unlock Johto Dex', 'Lock Johto Dex', 'Exit'], default=3
  When 'Unlock Johto Dex'
    s:pbUnlockDex(1)
    Show Text "\\bThe Johto Dex was unlocked."
  When 'Lock Johto Dex'
    s:pbLockDex(1)
    Show Text "\\bThe Johto Dex was locked."
  When 'Exit'
    Goto Start
When 'National Dex access'
  Show Text "\\bWhat about it?"
  Show Choices choices=['Unlock National Dex', 'Lock National Dex', 'Exit'], default=3
  When 'Unlock National Dex'
    s:pbUnlockDex
    :HasNationalDex = :ON
    Show Text "\\bThe National Dex was unlocked."
  When 'Lock National Dex'
    s:pbLockDex
    :HasNationalDex = :OFF
    Show Text "\\bThe National Dex was locked."
  When 'Exit'
    Goto Start
When 'Exit'
[end]

