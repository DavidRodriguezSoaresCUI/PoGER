[EVENT]
xy=[8, 4]


[PAGE]
graphic="Object ball"


Show Text "This ball contains a Pokémon caught by the Professor."
[end]


[PAGE]
graphic="Object ball"
:Choosingstarter == :ON

Show Text "\\bOak: So, you want Bulbasaur, the grass Pokémon?"
Show Choices choices=['Yes', 'No'], default=2
When 'Yes'
  s:pbAddPokemon(:BULBASAUR,5)
  :Choosingstarter = :OFF
  :Starterchoice = 1
  :A = :ON
When 'No'
  Show Text "\\bOak: Choose carefully!"
[end]


[PAGE]

:A == :ON

[end]

