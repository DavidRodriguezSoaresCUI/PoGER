[EVENT]
xy=[6, 3]
graphic=phone001

[PAGE]



Show Text "\\bOak: You should battle with your Pokémon to make it strong."
if s:$Trainer.pokegear
  Show Text "\\bOak: If you register me in your Pokégear, you can call me any time to rate your Pokédex completion."
  Show Choices choices=['Yes', 'No'], default=2
  When 'Yes'
    s:pbPhoneRegisterNPC(1,"Professor Oak",4)
    Show Text "\\bOak: Please let me know how you get on!"
  When 'No'
    Show Text "\\bOak: Oh, okay. Let me know if you change your mind."
Else
[end]


[PAGE]

:Choosingstarter == :ON

Show Text "\\bOak: Well, which one do you want?"
[end]

