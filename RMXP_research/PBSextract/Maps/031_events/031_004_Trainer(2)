[EVENT]
xy=[5, 14]
graphic=trchar037

[PAGE]
trigger=onEventTouch


# Battle: \bHi!  I like shorts!  They're comfy and easy to
# wear!
# Type: YOUNGSTER
# Name: Ben
# EndSpeech: Aww, I lost.
# EndBattle: \bYou can't get a trainer event simpler
# than me!
s:pbTrainerIntro(:YOUNGSTER)
s:Kernel.pbNoticePlayer(get_character(0))
Show Text "\\bHi! I like shorts! They're comfy and easy to wear!"
if s:pbTrainerBattle(:YOUNGSTER,"Ben",_I("Aww, I lost."),false,0,false,0)
  :A = :ON
s:pbTrainerEnd
[end]


[PAGE]

:A == :ON

Show Text "\\bYou can't get a trainer event simpler than me!"
[end]

